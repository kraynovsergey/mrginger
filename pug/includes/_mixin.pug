mixin article(title, classname)
    article.articles__item(class= classname)
        +picture('articles__picture', 'jpeg',
            'img/tmp/webp/article@2x.webp', 'img/tmp/webp/article.webp',
            'img/tmp/article@2x.jpg', 'img/tmp/article.jpg')
        h3.articles__title(role="heading")
