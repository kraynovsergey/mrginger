mixin picture(classname, format, webp2x, webp, jpg2x, jpg, width, height)
    picture(class= classname)
        source(type="image/webp" data-srcset=""+webp2x+" 2x, "+webp+" 1x" srcset="")
        source(type="image/"+format+"" data-srcset=""+jpg2x+" 2x, "+jpg+" 1x" srcset="")
        img.lazy(data-src= jpg src="" alt="" width= width height= height)

mixin navigation(classname, side, data)
    button.navigation__btn(class= classname class= side type="button" role="button")
        svg(width="27" height="20")
            use(xlink:href="img/sprite.svg#arrow")

mixin pagination(classname)
    .pagination(class= classname)


mixin category(title, img, width, height, classname)
    .category__item(class= classname)
        +picture('category__picture', 'jpeg', 'img/tmp/webp/'+img+'@2x.webp' , 'img/tmp/webp/'+img+'.webp', 'img/tmp/'+img+'@2x.jpg', 'img/tmp/'+img+'.jpg', width, height)
        a.category__title(href="catalog.html" role="link")= title

mixin product(img, title, text, price)
    article.product(role="article")
        .product__col
            .product__img
                +picture('product__picture', 'jpeg', 'img/tmp/webp/'+img+'@2x.webp' , 'img/tmp/webp/'+img+'.webp', 'img/tmp/'+img+'@2x.jpg', 'img/tmp/'+img+'.jpg', '255', '307')
                button.product__fast-view(type="button" role="button") Быстрый просмотр
                .product__actions._left
                    button.product__action._opacity(type="button" role="button" aria-label="Сравнить")
                        svg(width="16" height="16")
                            use(xlink:href="img/sprite.svg#compare")

                    .product__tags
                        .product__action._new._fill(type="button" role="button")
                            svg(width="21" height="8")
                                use(xlink:href="img/sprite.svg#new")
                        .product__action._sale._fill(type="button" role="button")
                            svg(width="16" height="14")
                                use(xlink:href="img/sprite.svg#sale")
                        .product__action._eco._fill(type="button" role="button")
                            svg(width="18" height="19")
                                use(xlink:href="img/sprite.svg#eco")
                        .product__action._medal._fill(type="button" role="button")
                            svg(width="18" height="19")
                                use(xlink:href="img/sprite.svg#medal")
                        .product__action._hit._fill(type="button" role="button")
                            svg(width="16" height="16")
                                use(xlink:href="img/sprite.svg#hit")

                .product__actions._right
                    button.product__action._opacity(type="button" role="button" aria-label="Добавить в избранное")
                        svg(width="16" height="16")
                            use(xlink:href="img/sprite.svg#favourite")

            a.product__title(href="product.html" role="link")= title
            .product__text= text
        form.product__controls(role="form")
            .product__price= price + ' ₽/кг'
            button.product__to-cart(type="button" role="button") Заказать

